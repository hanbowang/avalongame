{
  "name": "@avalon/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run build -w @avalon/shared && tsx --test src/**/*.test.ts",
    "test:coverage": "npm run build -w @avalon/shared && c8 -r text-summary tsx --test src/**/*.test.ts"
  },
  "dependencies": {
    "@avalon/shared": "1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
